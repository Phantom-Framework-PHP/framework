{
    "name": "phantom/framework",
    "description": "A minimalist but powerful PHP framework",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Phantom\\": "app/"
        },
        "files": [
            "utils/helpers.php"
        ]
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
